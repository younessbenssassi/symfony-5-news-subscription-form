{% extends 'base.html.twig' %}

{% block title %}Dashbord{% endblock %}

{% block body %}
<table class="table table-striped">
<thead>
 <tr>
  <th>Name </th>
  <th>Email</th>
  <th>Interest</th>
  <th>Actions</th>
 </tr>
</thead>
<tbody>
   {% for subscriber in subscribers %}
    <tr>
    	<td>{{subscriber.FullName}}</td>
      <td>{{subscriber.email}} </td>
      <td>{{subscriber.interest}} </td>

      <td>
         <a href="{{path('edit_subscriber',{'email':subscriber.email})}}" class="btn btn-info">Edit</a>
         <a href="{{path('delet_subscriber',{'email':subscriber.email})}}" class="btn btn-danger">Delete</a>
      </td>
   </tr>
  {% endfor %}
</tbody>
</table>
{% endblock %}
